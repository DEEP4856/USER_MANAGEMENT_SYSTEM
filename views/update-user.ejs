<!-- include header -->
<%-include('include/header') %>
<!-- /include header -->



    <!-- main site -->
    <main id="site-main">
        <div class="container">
         <div class="box-nav d-flex justify-between">

         <div class="filter" class="border-shadow">
            <a href="/" ><i class="fa-sharp fa-solid fa-circle-left"></i>All Users</a>  
         </div>
        </div>
        <div class="form-title text-center" >
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use below form to update account</span>
        </div>

         <!-- form handeling -->
          

         <form  method="post" id="update_user">
            <div class="new_user ">
              <div class="form-group">
                <label for="name" class="text-dark">Name</label>
                <input type="hidden" class="text-dark" value="<%= user._id%>"  name="id">
                <input type="text" placeholder=""  value="<%= user.name%>" name="name">
              </div>
              <div class="form-group">
                <label for="Email" class="text-dark">Email</label>
                <input type="text" placeholder="example@gmail.com" value="<%= user.email%>" name="email">
                
              </div>
                <div class="form-group">
                  <label for="gender" class="text-dark">Gender</label>
                  <div class="radio inline">
                                                                                 <!-- using if ternary operator -->
                    <input type="radio" id="radio-2" name="gender" value="Male"<%= user.gender=='Male'?'checked':''%>>
                    <label for="radio-2" class="radio-label">Male</label>
                  </div>
                  <div class="radio inline">
        
                    <input type="radio" id="radio-3" name="gender" value="Female"<%= user.gender=='Female'?'checked':''%>>
                    <label for="radio-3" class="radio-label">Female</label>
                  </div>
                  <div class="radio inline">
        
                    <input type="radio" id="radio-4" name="gender" value="Others"<%= user.gender=='Others'?'checked':""%>>
                    <label for="radio-4" class="radio-label">Others</label>
                  </div>
               </div>
             
        
             <div class="form-group">
                <label for="gender" class="text-dark">Status</label>
                <div class="radio inline">
        
                  <input type="radio" id="radio-5" name="status" value="Active"<%= user.status=='Active'?'checked':''%>>
                  <label for="radio-5" class="radio-label">Active</label>
                </div>
                <div class="radio inline">
        
                  <input type="radio" id="radio-6" name="status" value="Inactive"<%= user.status=='Inactive'?'checked':''%>>
                  <label for="radio-6" class="radio-label">Inactive</label>
                </div>
             </div>
             
             <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
             </div>
        












        
        
            </div>
         </form> 
         
        </div>
    </main>
    <!-- /main site -->


<!-- include footer -->
<%- include("include/footer") %>
<!-- /include footer -->